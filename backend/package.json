{
  "name": "linkage-backend",
  "version": "1.0.0",
  "description": "Backend para la red social Linkage con MongoDB",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "install-deps": "npm install express mongoose cors bcryptjs jsonwebtoken socket.io dotenv",
    "install-dev": "npm install -D nodemon",
    "setup": "npm run install-deps && npm run install-dev"
  },
  "keywords": [
    "social",
    "network",
    "mongodb",
    "express",
    "socket.io",
    "jwt"
  ],
  "author": "Tu Nombre",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.1",
    "socket.io": "^4.7.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
