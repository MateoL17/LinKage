{
  "name": "linkage-backend",
  "version": "1.0.0",
  "description": "Backend para la red social Linkage con MongoDB",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "install-deps": "npm install express mongoose cors bcryptjs jsonwebtoken socket.io dotenv multer",
    "install-dev": "npm install -D nodemon",
    "setup": "npm run install-deps && npm run install-dev",
    "ngrok": "node ngrok-setup.js",
    "dev-with-ngrok": "concurrently \"npm run dev\" \"npm run ngrok\"",
    "test-api": "node test-connection.js",
    "start-all": "concurrently \"npm run dev\" \"sleep 3 && npm run ngrok\""
  },
  "keywords": [
    "social",
    "network",
    "mongodb",
    "express",
    "socket.io",
    "jwt",
    "realtime"
  ],
  "author": "Mateo Lasso",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.1",
    "multer": "^1.4.5-lts.1",
    "ngrok": "^5.0.0-beta.2",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "nodemon": "^3.1.10"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MateoL17/LinKage.git"
  },
  "bugs": {
    "url": "https://github.com/MateoL17/LinKage/issues"
  },
  "homepage": "https://github.com/MateoL17/LinKage#readme"
}
